@model tl2_tp10_2023_iignac.ViewModels.CrearTableroViewModel

@{ViewData["title"]="Crear tablero";}

<h1 class="text-center">Crear tablero</h1>
<form asp-controller="Tablero" asp-action="CrearTablero" method="post" class="form-view">
    <section class="mb-3">
        <label asp-for="@Model.TableroVM.Nombre" class="form-label"></label>
        <input asp-for = "@Model.TableroVM.Nombre" required class="form-control">
        <span asp-validation-for="@Model.TableroVM.Nombre" class="text-danger"></span>
    </section>
    <section class="mb-3">
        <label asp-for="@Model.TableroVM.Descripcion" class="form-label"></label>
        <input asp-for = "@Model.TableroVM.Descripcion" class="form-control">
    </section>
    <input hidden asp-for="@Model.TableroVM.IdUsuarioPropietario" value="@Model.IdUsuarioPropietario">   
    <input type="submit" class="btn btn-outline-success" value="Confirmar">
</form>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }