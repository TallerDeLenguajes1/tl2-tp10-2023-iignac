@model tl2_tp10_2023_iignac.ViewModels.CrearTareaViewModel

@{ViewData["title"]="Crear tarea";}

<section>
    <h1 class="text-center">Crear tarea</h1>
    <form asp-controller="Tarea" asp-action="CrearTarea" method="post" class="form-view">
        <section class="mb-3">
            <label asp-for=@Model.TareaVM.Nombre  class="form-label"></label>
            <input asp-for="@Model.TareaVM.Nombre" class="form-control" required>
        </section>
        <section class="mb-3">
            <label asp-for=@Model.TareaVM.Descripcion class="form-label"></label>
            <input asp-for="@Model.TareaVM.Descripcion" class="form-control">
        </section>
        <section class="mb-3">
            <label asp-for="@Model.TareaVM.Color" class="form-label"></label>
            <input asp-for="@Model.TareaVM.Color" class="form-control">
        </section>
        <section class="mb-3">
            <label asp-for="@Model.TareaVM.Estado" class="form-label"></label>
            <select asp-for="@Model.TareaVM.Estado" asp-items="@Html.GetEnumSelectList<EstadoTarea>()" class="form-select" aria-label="Default select example"></select>
        </section>
        <section class="mb-3">
            <label asp-for="@Model.TareaVM.IdUsuarioAsignado" class="form-label">Asignar usuario</label>
            <select asp-for="@Model.TareaVM.IdUsuarioAsignado" class="form-select">
                <option value="">Ninguno</option>
                @foreach(var usuarioVM in Model.ListaUsuariosVM){
                    <option value="@usuarioVM.Id">@usuarioVM.Nombre</option>
                }
            </select>
        </section>
        <input hidden asp-for="@Model.TareaVM.IdTablero" value="@Model.IdTablero">
        <input hidden asp-for="@Model.IdTablero">
        <input hidden asp-for="@Model.ListaUsuariosVM">
        <input type="submit" value="Confirmar" class="btn btn-outline-success">
    </form>
</section>