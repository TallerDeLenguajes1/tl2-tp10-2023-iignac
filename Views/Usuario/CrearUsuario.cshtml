@model tl2_tp10_2023_iignac.ViewModels.UsuarioViewModel 

@{ViewData["title"]="Crear usuario";}

<h1 class="text-center">Crear usuario</h1>

<section>
    <article>
        <form asp-controller="Usuario" asp-action="CrearUsuario" method="post" class="form-view">
            <section class="mb-3">
                <label asp-for = "@Model.Nombre" class="form-label"></label>
                <input asp-for = "@Model.Nombre" placeholder = "Ej. usuario123" class="form-control">
                <span asp-validation-for="@Model.Nombre" class="text-danger"></span>
            </section>
            <section class="mb-3">
                <label asp-for = "@Model.Contrasenia" class="form-label"></label>
                <input asp-for = "@Model.Contrasenia" type="password" class="form-control" required>
                <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>
            </section>
            <section class="mb-3">
                <label asp-for = "@Model.Rol" class="form-label"></label>
                <select asp-for = "@Model.Rol" asp-items="@Html.GetEnumSelectList<Rol>()" class="form-select" aria-label="Default select example">
                    <option value="">-Seleccione rol-</option>
                </select>
                <span asp-validation-for="@Model.Rol" class="text-danger"></span>
            </section>
            <input type="submit" class="btn btn-outline-success">
        </form>
    </article>
</section>

@section Scripts { <partial name="_ValidationScriptsPartial" /> }